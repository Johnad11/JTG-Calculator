    <title>JTG RISK CALCULATOR</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['"News Cycle"', 'sans-serif'], // Closest web-safe match to NewsGoth BT
                    },
                    colors: {
                        jtg: {
                            green: '#1BA657',    // Brand Green
                            blue: '#162C99',     // Brand Blue
                            dark: '#0a0e29',     // Deep background derived from blue
                            card: '#111633',     // Lighter card bg
                            input: '#1a214d',    // Input fields
                        }
                    }
                }
            }
        }
    </script>
    <!-- React and ReactDOM -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <!-- Babel for JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <!-- Google Font: News Cycle (NewsGoth alternative) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=News+Cycle:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'News Cycle', sans-serif;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: #0a0e29;
        }

        ::-webkit-scrollbar-thumb {
            background: #162C99;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #1BA657;
        }

        /* Animation for results */
        @keyframes popIn {
            0% {
                opacity: 0;
                transform: scale(0.95);
            }

            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        .animate-pop {
            animation: popIn 0.3s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }

        /* Hide number input arrows */
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .brand-gradient-text {
            background: linear-gradient(135deg, #1BA657 0%, #ffffff 50%, #1BA657 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>
</head>

<body
    class="bg-jtg-dark text-slate-100 min-h-screen selection:bg-jtg-green selection:text-white flex flex-col md:flex-row overflow-hidden">
    <div id="root" class="w-full h-full flex flex-col md:flex-row"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        // --- ICONS ---
        const Icons = {
            LogoFallback: () => (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="url(#brandGrad)" className="w-full h-full">
                    <defs>
                        <linearGradient id="brandGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" stopColor="#1BA657" />
                            <stop offset="100%" stopColor="#162C99" />
                        </linearGradient>
                    </defs>
                    <path d="M12 2L2 7l10 5 10-5-10-5zm0 9l2-1-2-1-2 1 2 1zm0-3.5L6 7l6 2.5L18 7l-6-2.5zM2 17l10 5 10-5M2 12l10 5 10-5" />
                </svg>
            ),
            Calculator: () => <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><rect x="4" y="2" width="16" height="20" rx="2"></rect><line x1="8" y1="6" x2="16" y2="6"></line><line x1="16" y1="14" x2="16" y2="14"></line><line x1="8" y1="14" x2="8" y2="14"></line><line x1="12" y1="14" x2="12" y2="14"></line><line x1="16" y1="18" x2="16" y2="18"></line><line x1="8" y1="18" x2="8" y2="18"></line><line x1="12" y1="18" x2="12" y2="18"></line></svg>,
            Home: () => <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>,
            ChevronDown: () => <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>,
            ArrowRight: () => <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
        };

        const JtgRiskCalc = () => {
            // --- STATE ---
            const [balance, setBalance] = useState(100000);
            const [riskMode, setRiskMode] = useState('percent');
            const [riskValue, setRiskValue] = useState(1.0);
            const [assetClass, setAssetClass] = useState('indices');
            const [pair, setPair] = useState('US30');
            const [direction, setDirection] = useState('buy');
            const [entryPrice, setEntryPrice] = useState('');
            const [stopLoss, setStopLoss] = useState('');
            const [takeProfit, setTakeProfit] = useState('');
            const [imgError, setImgError] = useState(false);

            // Calculated States
            const [calculatedLot, setCalculatedLot] = useState(null);
            const [riskAmountResult, setRiskAmountResult] = useState(0);
            const [rrResult, setRrResult] = useState(null);
            const [projectedProfit, setProjectedProfit] = useState(null);

            // --- ASSET DATA ---
            const assets = {
                indices: {
                    label: 'Indices',
                    pairs: [
                        { name: 'GER40 (DAX)', contractSize: 1, type: 'index', note: '1 Lot = 1 Unit' },
                        { name: 'JPN225 (Nikkei)', contractSize: 1, type: 'index', note: '1 Lot = 1 Unit' },
                        { name: 'NAS100 (Nasdaq)', contractSize: 1, type: 'index', note: '1 Lot = 1 Unit' },
                        { name: 'SPX500 (S&P)', contractSize: 1, type: 'index', note: '1 Lot = 1 Unit' },
                        { name: 'UK100 (FTSE)', contractSize: 1, type: 'index', note: '1 Lot = 1 Unit' },
                        { name: 'US30 (Dow)', contractSize: 1, type: 'index', note: '1 Lot = 1 Unit' },
                    ],
                },
                metals: {
                    label: 'Metals',
                    pairs: [
                        { name: 'XAGUSD (Silver)', contractSize: 5000, type: 'metal', note: '1 Lot = 5000 oz' },
                        { name: 'XAUUSD (Gold)', contractSize: 100, type: 'metal', note: '1 Lot = 100 oz' },
                    ],
                },
                crypto: {
                    label: 'Crypto',
                    pairs: [
                        { name: 'BTCUSD', contractSize: 1, type: 'crypto', note: '1 Lot = 1 Coin' },
                        { name: 'DOGEUSD', contractSize: 1, type: 'crypto', note: '1 Lot = 1 Coin' },
                        { name: 'ETHUSD', contractSize: 1, type: 'crypto', note: '1 Lot = 1 Coin' },
                        { name: 'LTCUSD', contractSize: 1, type: 'crypto', note: '1 Lot = 1 Coin' },
                        { name: 'SOLUSD', contractSize: 1, type: 'crypto', note: '1 Lot = 1 Coin' },
                        { name: 'XRPUSD', contractSize: 1, type: 'crypto', note: '1 Lot = 1 Coin' },
                    ],
                },
                forex: {
                    label: 'Forex',
                    pairs: [
                        { name: 'AUDCAD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'AUDCHF', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'AUDJPY', contractSize: 100000, type: 'forex_jpy', note: 'JPY Pair' },
                        { name: 'AUDNZD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'AUDUSD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'CADCHF', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'CADJPY', contractSize: 100000, type: 'forex_jpy', note: 'JPY Pair' },
                        { name: 'CHFJPY', contractSize: 100000, type: 'forex_jpy', note: 'JPY Pair' },
                        { name: 'EURAUD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'EURCAD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'EURCHF', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'EURGBP', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'EURJPY', contractSize: 100000, type: 'forex_jpy', note: 'JPY Pair' },
                        { name: 'EURNZD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'EURUSD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'GBPAUD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'GBPCAD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'GBPCHF', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'GBPJPY', contractSize: 100000, type: 'forex_jpy', note: 'JPY Pair' },
                        { name: 'GBPNZD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'GBPUSD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'NZDCAD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'NZDCHF', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'NZDJPY', contractSize: 100000, type: 'forex_jpy', note: 'JPY Pair' },
                        { name: 'NZDUSD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'USDCAD', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'USDCHF', contractSize: 100000, type: 'forex', note: 'Std Lot' },
                        { name: 'USDJPY', contractSize: 100000, type: 'forex_jpy', note: 'JPY Pair' },
                        { name: 'USDMXN', contractSize: 100000, type: 'forex', note: 'Exotic' },
                        { name: 'USDZAR', contractSize: 100000, type: 'forex', note: 'Exotic' },
                    ],
                }
            };

            // --- LOGIC ---
            const handleCalculate = () => {
                if (!entryPrice || !stopLoss || !balance) return;

                let riskInDollars = 0;
                if (riskMode === 'percent') {
                    riskInDollars = balance * (riskValue / 100);
                } else {
                    riskInDollars = parseFloat(riskValue);
                }

                const entry = parseFloat(entryPrice);
                const sl = parseFloat(stopLoss);
                const tp = takeProfit ? parseFloat(takeProfit) : null;
                const riskDiff = Math.abs(entry - sl);

                const selectedPairData = assets[assetClass].pairs.find(p => p.name === pair);
                const contractSize = selectedPairData ? selectedPairData.contractSize : 1;
                const type = selectedPairData ? selectedPairData.type : 'standard';

                let lotSize = 0;

                if (type === 'index' || type === 'crypto') {
                    lotSize = riskInDollars / riskDiff;
                }
                else if (type === 'metal') {
                    lotSize = riskInDollars / (riskDiff * contractSize);
                }
                else if (type === 'forex') {
                    lotSize = riskInDollars / (riskDiff * contractSize);
                }
                else if (type === 'forex_jpy') {
                    const pips = riskDiff * 100;
                    const approxPipValuePerLot = 6.8;
                    lotSize = riskInDollars / (pips * approxPipValuePerLot);
                }

                // RR Logic
                if (tp) {
                    const rewardDiff = Math.abs(tp - entry);
                    if (riskDiff !== 0) {
                        const rr = rewardDiff / riskDiff;
                        setRrResult(rr.toFixed(2));
                        const profit = riskInDollars * rr;
                        setProjectedProfit(profit.toFixed(2));
                    }
                } else {
                    setRrResult(null);
                    setProjectedProfit(null);
                }

                setCalculatedLot(lotSize.toFixed(2));
                setRiskAmountResult(riskInDollars.toFixed(2));
            };

            useEffect(() => {
                setPair(assets[assetClass].pairs[0].name);
                setCalculatedLot(null);
                setRrResult(null);
            }, [assetClass]);

            // Auto-calculate on input change if valid
            useEffect(() => {
                if (entryPrice && stopLoss && balance) {
                    const timeout = setTimeout(handleCalculate, 300); // Debounce
                    return () => clearTimeout(timeout);
                }
            }, [balance, riskMode, riskValue, entryPrice, stopLoss, takeProfit, pair]);


            // --- UI RENDER ---
            return (
                <div className="flex w-full h-screen overflow-hidden">

                    {/* --- SIDEBAR --- */}
                    <div className="hidden md:flex w-24 bg-jtg-dark border-r border-jtg-blue/30 flex-col items-center py-8 z-20 shadow-2xl">

                        <div className="w-20 h-20 mb-10 flex items-center justify-center transition-transform hover:scale-110">
                            {!imgError ? (
                                <img
                                    src="https://storage.googleapis.com/v0.b/generative-language-preview.googleapis.com/o/uploaded%2FIMG_20250624_114347.png-2290b792-24d1-4a20-ab9a-fab823ddc579?alt=media"
                                    alt="JTG"
                                    className="w-full h-full object-contain"
                                    onError={() => setImgError(true)}
                                />
                            ) : <Icons.LogoFallback />}
                        </div>

                        <div className="flex flex-col gap-6 w-full">
                            <button className="flex flex-col items-center gap-1 text-jtg-green w-full py-3 border-l-4 border-jtg-green bg-jtg-blue/20">
                                <Icons.Calculator />
                                <span className="text-[10px] font-bold tracking-wider">CALC</span>
                            </button>
                            <button
                                onClick={() => window.location.href = 'https://johnadtradersgroup.vercel.app/'}
                                className="flex flex-col items-center gap-1 text-slate-400 w-full py-3 hover:text-white transition"
                            >
                                <Icons.Home />
                                <span className="text-[10px] font-bold tracking-wider">WEB</span>
                            </button>
                        </div>
                    </div>

                    {/* --- MAIN CONTENT --- */}
                    <div className="flex-1 flex flex-col h-full relative overflow-y-auto overflow-x-hidden bg-jtg-dark">

                        {/* Background Elements */}
                        <div className="absolute top-0 right-0 w-[600px] h-[600px] bg-jtg-blue/20 rounded-full blur-[120px] pointer-events-none"></div>
                        <div className="absolute bottom-0 left-0 w-[500px] h-[500px] bg-jtg-green/10 rounded-full blur-[100px] pointer-events-none"></div>

                        {/* Top Nav (Mobile) */}
                        <div className="md:hidden p-4 flex justify-between items-center bg-jtg-dark/95 backdrop-blur z-20 border-b border-jtg-blue/30 sticky top-0">
                            <div className="flex items-center gap-3">
                                <div className="w-12 h-12">
                                    <img
                                        src="https://storage.googleapis.com/v0.b/generative-language-preview.googleapis.com/o/uploaded%2FIMG_20250624_114347.png-2290b792-24d1-4a20-ab9a-fab823ddc579?alt=media"
                                        className="w-full h-full object-contain"
                                        onError={(e) => e.target.style.display = 'none'}
                                    />
                                </div>
                                <span className="text-lg font-bold text-white tracking-wide">JTG <span className="text-jtg-green">CALC</span></span>
                            </div>
                        </div>

                        <div className="flex-1 p-4 md:p-10 max-w-7xl mx-auto w-full grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">

                            {/* --- LEFT COLUMN: CONTROLS --- */}
                            <div className="lg:col-span-7 space-y-8">

                                <div className="mb-2 hidden md:block">
                                    <h1 className="text-4xl font-bold text-white mb-2 tracking-wide uppercase">JTG RISK CALCULATOR</h1>
                                    <p className="text-slate-400 text-sm font-medium tracking-wide">Professional Risk Management • Precision • Growth</p>
                                </div>

                                {/* Asset Class Tabs */}
                                <div className="flex gap-2 p-1.5 bg-jtg-input rounded-xl w-full overflow-x-auto shadow-inner border border-jtg-blue/30">
                                    {Object.keys(assets).map((key) => (
                                        <button
                                            key={key}
                                            onClick={() => setAssetClass(key)}
                                            className={`flex-1 py-3 px-4 rounded-lg text-xs font-bold uppercase tracking-widest transition-all whitespace-nowrap ${assetClass === key
                                                    ? 'bg-gradient-to-r from-jtg-blue to-blue-700 text-white shadow-lg border border-blue-500/50'
                                                    : 'text-slate-400 hover:text-white hover:bg-white/5'
                                                }`}
                                        >
                                            {assets[key].label}
                                        </button>
                                    ))}
                                </div>

                                {/* Main Inputs Card */}
                                <div className="bg-jtg-card border border-jtg-blue/30 rounded-2xl p-8 shadow-2xl relative overflow-hidden">
                                    <div className="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-jtg-green to-jtg-blue"></div>

                                    {/* Instrument Select */}
                                    <div className="mb-8">
                                        <label className="text-xs font-bold text-slate-400 uppercase mb-3 block tracking-wider">Select Instrument</label>
                                        <div className="relative group">
                                            <select
                                                value={pair}
                                                onChange={(e) => setPair(e.target.value)}
                                                className="w-full bg-jtg-input border border-jtg-blue/40 text-white text-lg font-medium rounded-xl p-4 pr-10 focus:ring-2 focus:ring-jtg-green/50 focus:border-jtg-green outline-none transition-all appearance-none cursor-pointer hover:border-jtg-blue/60"
                                            >
                                                {assets[assetClass].pairs.map((p) => (
                                                    <option key={p.name} value={p.name}>{p.name}</option>
                                                ))}
                                            </select>
                                            <div className="absolute right-4 top-1/2 -translate-y-1/2 text-slate-500 pointer-events-none">
                                                <Icons.ChevronDown />
                                            </div>
                                        </div>
                                    </div>

                                    {/* Account & Risk Grid */}
                                    <div className="grid grid-cols-2 gap-6 mb-8">
                                        <div>
                                            <label className="text-xs font-bold text-slate-400 uppercase mb-3 block tracking-wider">Balance</label>
                                            <div className="relative">
                                                <span className="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 font-serif italic text-lg">$</span>
                                                <input
                                                    type="number"
                                                    value={balance}
                                                    onChange={(e) => setBalance(e.target.value)}
                                                    className="w-full bg-jtg-input border border-jtg-blue/40 rounded-xl p-4 pl-10 text-white font-mono text-lg font-medium focus:ring-2 focus:ring-jtg-green/50 outline-none transition-all"
                                                />
                                            </div>
                                        </div>
                                        <div>
                                            <label className="text-xs font-bold text-slate-400 uppercase mb-3 block tracking-wider">Risk</label>
                                            <div className="flex bg-jtg-input border border-jtg-blue/40 rounded-xl overflow-hidden focus-within:ring-2 focus-within:ring-jtg-green/50 transition-all">
                                                <input
                                                    type="number"
                                                    value={riskValue}
                                                    onChange={(e) => setRiskValue(e.target.value)}
                                                    className="w-full bg-transparent p-4 text-white font-mono text-lg font-medium outline-none z-10"
                                                />
                                                <button
                                                    onClick={() => setRiskMode(riskMode === 'percent' ? 'usd' : 'percent')}
                                                    className="bg-jtg-blue/20 border-l border-jtg-blue/40 px-6 text-sm font-bold text-jtg-green hover:bg-jtg-blue/40 transition cursor-pointer hover:text-white"
                                                >
                                                    {riskMode === 'percent' ? '%' : '$'}
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    {/* Trade Params Grid */}
                                    <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
                                        <div className="space-y-2">
                                            <label className="text-xs font-bold text-jtg-green uppercase tracking-wider">Entry Price</label>
                                            <input
                                                type="number"
                                                placeholder="0.00"
                                                value={entryPrice}
                                                onChange={(e) => setEntryPrice(e.target.value)}
                                                className="w-full bg-jtg-input border border-jtg-blue/40 rounded-xl p-4 text-white font-mono focus:ring-2 focus:ring-jtg-green/50 outline-none placeholder-slate-600 transition-all"
                                            />
                                        </div>
                                        <div className="space-y-2">
                                            <label className="text-xs font-bold text-red-500 uppercase tracking-wider">Stop Loss</label>
                                            <input
                                                type="number"
                                                placeholder="0.00"
                                                value={stopLoss}
                                                onChange={(e) => setStopLoss(e.target.value)}
                                                className="w-full bg-jtg-input border border-jtg-blue/40 rounded-xl p-4 text-white font-mono focus:ring-2 focus:ring-red-500/50 outline-none placeholder-slate-600 transition-all"
                                            />
                                        </div>
                                        <div className="space-y-2">
                                            <label className="text-xs font-bold text-slate-400 uppercase tracking-wider">Take Profit</label>
                                            <input
                                                type="number"
                                                placeholder="Optional"
                                                value={takeProfit}
                                                onChange={(e) => setTakeProfit(e.target.value)}
                                                className="w-full bg-jtg-input border border-jtg-blue/40 rounded-xl p-4 text-white font-mono focus:ring-2 focus:ring-slate-500 outline-none placeholder-slate-600 transition-all"
                                            />
                                        </div>
                                    </div>

                                    <button
                                        onClick={handleCalculate}
                                        className="w-full mt-10 bg-gradient-to-r from-jtg-green to-emerald-600 hover:from-emerald-600 hover:to-jtg-green text-white font-bold uppercase tracking-widest py-5 rounded-xl shadow-lg shadow-green-900/30 active:scale-[0.98] transition-all flex items-center justify-center gap-2 text-sm"
                                    >
                                        Calculate Position
                                    </button>

                                </div>
                            </div>

                            {/* --- RIGHT COLUMN: RESULTS --- */}
                            <div className="lg:col-span-5 flex flex-col gap-8">

                                {/* LOT SIZE CARD (HERO) */}
                                <div className="bg-gradient-to-b from-jtg-card to-jtg-dark border border-jtg-blue/30 rounded-2xl p-10 text-center relative overflow-hidden shadow-2xl min-h-[350px] flex flex-col justify-center items-center">

                                    {/* Ambient Glow */}
                                    <div className="absolute top-0 left-1/2 -translate-x-1/2 w-40 h-1 bg-jtg-green shadow-[0_0_50px_rgba(27,166,87,0.6)]"></div>

                                    {calculatedLot ? (
                                        <div className="animate-pop w-full">
                                            <p className="text-slate-400 text-xs font-bold uppercase tracking-[0.3em] mb-4">Recommended Position</p>
                                            <div className="text-8xl md:text-9xl font-black text-white tracking-tighter drop-shadow-2xl mb-4 leading-none">
                                                {calculatedLot}
                                            </div>
                                            <div className="inline-block bg-jtg-green/10 text-jtg-green border border-jtg-green/20 px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-widest mb-10">
                                                Standard Lots
                                            </div>

                                            <div className="w-full h-px bg-jtg-blue/30 mb-8"></div>

                                            <div className="flex justify-between items-center w-full px-2 mb-6">
                                                <div className="text-left">
                                                    <p className="text-slate-500 text-[10px] font-bold uppercase mb-1 tracking-wider">Risk Amount</p>
                                                    <p className="text-2xl font-bold text-red-500 font-mono">${riskAmountResult}</p>
                                                </div>
                                                {projectedProfit && (
                                                    <div className="text-right">
                                                        <p className="text-slate-500 text-[10px] font-bold uppercase mb-1 tracking-wider">Projected Gain</p>
                                                        <p className="text-2xl font-bold text-jtg-green font-mono">+${projectedProfit}</p>
                                                    </div>
                                                )}
                                            </div>

                                            {rrResult && (
                                                <div className="w-full bg-slate-800/40 rounded-xl p-4 border border-slate-700/50 flex justify-between items-center animate-pop">
                                                    <div className="flex items-center gap-2">
                                                        <div className="w-2 h-2 rounded-full bg-jtg-green"></div>
                                                        <span className="text-slate-400 text-xs font-bold uppercase tracking-wider">Risk : Reward</span>
                                                    </div>
                                                    <span className="text-white font-mono text-xl font-bold tracking-tight">1 : {rrResult}</span>
                                                </div>
                                            )}
                                        </div>
                                    ) : (
                                        <div className="opacity-20 flex flex-col items-center">
                                            <div className="w-24 h-24 border-4 border-slate-700 rounded-full flex items-center justify-center mb-6">
                                                <span className="text-4xl text-slate-600">--</span>
                                            </div>
                                            <p className="text-sm font-medium tracking-wide">Awaiting Trade Details</p>
                                        </div>
                                    )}
                                </div>

                                {/* PROMO CARD */}
                                <div className="bg-gradient-to-r from-jtg-blue/20 to-jtg-card border border-jtg-blue/30 rounded-2xl p-8 relative overflow-hidden group hover:border-jtg-green/30 transition-colors duration-500">
                                    <div className="absolute top-0 right-0 w-40 h-40 bg-jtg-green/5 rounded-full blur-3xl -mr-10 -mt-10 transition-opacity group-hover:opacity-100 opacity-50"></div>

                                    <div className="relative z-10">
                                        <h3 className="text-xl font-bold text-white mb-2 tracking-wide">Scale Your Capital</h3>
                                        <p className="text-slate-400 text-sm leading-relaxed mb-6 font-light">
                                            Join the JTG community. Get data-driven insights to pass your Prop Firm challenges consistently.
                                        </p>
                                        <button
                                            onClick={() => window.location.href = 'https://johnadtradersgroup.vercel.app/'}
                                            className="text-sm font-bold text-jtg-green hover:text-white flex items-center gap-2 transition-colors uppercase tracking-wider"
                                        >
                                            Visit JTG Website <Icons.ArrowRight />
                                        </button>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<JtgRiskCalc />);
    </script>
</body>

</html>